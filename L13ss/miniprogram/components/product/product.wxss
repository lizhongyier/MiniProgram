/* 产品列表 */

.products {
  margin: 30rpx 0;
  width: 100%;
  
}

.products .probox {
  width: 50%;
  float: left;
  padding: 0 4rpx 8rpx;
  box-sizing: border-box;
  background-color: #e6e6e6;
}

.products .probox .productcontent {
  background-color: #fff;
}



.products .probox image {
  width: 100%;
}

.products .probox .text {
  width: 100%;
  padding: 6rpx;
  font-size: 24rpx;
}

.products .probox .self {
  width: auto;
  height: 26rpx;
  display: inline-block;
  top: 0;
  margin-right: 8rpx;
  line-height: 26rpx;
  background-color: #e43130;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx;
  border-radius: 6rpx;
}

.products .probox .title {
  box-sizing: border-box;
  height: 62rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
  color: #232326;
  margin-top: 6rpx;
  line-height: 30rpx;
  margin-bottom: 6rpx;
}

.products .probox .buy {
  width: 100%;
  display: flex;
  padding: 0rpx 8rpx;
  padding-bottom: 24rpx;
  justify-content: space-around;
  box-sizing: border-box;
}

.products .probox .buy .price {
  flex: 1;
  text-align: left;
  color: #f23030;
}

.products .probox .buy .same {
  flex: 1;
  text-align: right;
}

.products .probox .buy .same text {
  padding: 2rpx 6rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
  font-size: 24rpx;
}
