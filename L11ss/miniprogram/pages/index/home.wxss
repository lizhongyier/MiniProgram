/* miniprogram/pages/index/home.wxss */

/* 顶部搜索 */

.search-bar {
  width: 100%;
  height: 44px;
  position: fixed;
  top: 0px;
  z-index: 9999;
  justify-content: space-around;
}

.search-bar.fixed {
  background-color: #e43130;
}

.search-bar .category, .search-bar .login {
  height: 44px;
  width: 50px;
}

.search-bar .category .icon-category {
  margin: 14px 0 0 15px;
  width: 20px;
  height: 18px;
  display: block;
  background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACgAAAAgAgMAAAAdw9KTAAAABGdBTUEAALGPC/xhBQAAAAFzUkdCAK7OHOkAAAAMUExURUdwTP///////////waf0AoAAAADdFJOUwDjSYAlncUAAAAbSURBVBjTY5j/Hwq+MdTDmH+RmUgK6AuGhcsAU5tyB6Ji+x0AAAAASUVORK5CYII=);
  background-size: 100% 100%;
}

.search-bar .input {
  padding-top: 7px;
}

.search-bar .input input {
  height: 30px;
  width: 100%;
  padding-left: 43px;
  box-sizing: border-box;
  font-size: 12px;
  background-color: #fff;
  border-radius: 15px;
}

.search-bar .input .jd-logo {
  display: block;
  width: 20px;
  height: 15px;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 20px 15px;
  margin: 8px 8px 0 15px;
  position: absolute;
  z-index: 1;
  float: left;
}

.search-bar .input .line {
  display: block;
  position: absolute;
  margin: 8px 8px 0 38px;
  width: 1px;
  height: 15px;
}

.search-bar .login {
  text-align: center;
  line-height: 44px;
  color: #fff;
}

/*  轮播样式  */

swiper image {
  width: 100%;
  height: 360rpx;
}

/* main-nav导航 */

.main-nav {
  width: 100%;
}

.main-nav .main-nav-item {
  display: block;
  width: 20%;
  float: left;
  text-align: center;
}

.main-nav .main-nav-item image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 10px;
}

.main-nav .main-nav-item text {
  display: block;
  margin-top: 6px;
  font-size: 12px;
}

/* 产品列表 */

.products {
  margin: 15px 0px;
  width: 100%;
  background-color: #e6e6e6;
  
}

.products .probox {
  width: 49.5%;
  display: inline-block;
  float: left;
  background-color: #fff;
  margin-top: 3px;
  padding: 0px 0px 3px 0px;
  box-sizing: border-box;
  
}


.products .probox:nth-of-type(2n) {
  float: right;
  
}
.products .probox image {
  width: 100%;
}

.products .probox .text {
  width: 100%;
  padding: 3px;
  font-size: 12px;
}

.products .probox .self {
  width: auto;
  height: 13px;
  display: inline-block;
  top: 0;
  margin-right: 4px;
  line-height: 13px;
  background-color: #e43130;
  color: #fff;
  font-size: 10px;
  padding: 2px;
  border-radius: 3px;
}

.products .probox .title {
  box-sizing: border-box;
  height: 31px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
  color: #232326;
  margin-top: 3px;
  line-height: 15px;
  margin-bottom: 3px;
}

.products .probox .buy {
  width: 100%;
  display: flex;
  padding: 0px 3px;
  justify-content: space-around;
  box-sizing: border-box;
}

.products .probox .buy .price {
  flex: 1;
  text-align: left;
  color: #f23030;
}

.products .probox .buy .same {
  flex: 1;
  text-align: right;
  
}
.products .probox .buy .same text{
  padding: 1px 3px;
  border: 1px solid #999;
  border-radius: 5px;
}