/* miniprogram/pages/productdetail/index.wxss */

.productdetail {
  width: 100%;
}

.productdetail .detail-title {
  width: 100%;
  padding: 20rpx 16rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #eee;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-word;
  box-sizing: border-box;
}

.productdetail .detail-price {
  padding: 6rpx 10rpx;
  background-color: #e33333;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}

.option {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: solid 1px #ccc;
}

.option .flex-item {
  text-align: center;
}

.option .fa {
  font-size: 40rpx;
}

.option .tips {
  font-size: 24rpx;
  line-height: 1.5em;
  display: block;
  margin: 0;
  padding: 0;
}

.option .btn-addcart, .option .btn-buy {
  width: 232rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.option .btn-addcart {
  background: #ff9600;
}

.option .btn-buy {
  background: #e4393c;
}

/* 弹出层 */

.pop .mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.3);
}

.pop .pop-option {
  width: 100%;
  height: 600rpx;
  position: fixed;
  left: 0;
  bottom: -400px;
  background-color: #fff;
  z-index: 1000;
  -webkit-transition: all 30s linear;
}

.pop .pop-option.active {
  bottom: 0;
  -webkit-transition: all 30s linear;
}

.pop .choose {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #e4393c;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}

/* 弹出层内容 */

.pop .content {
  width: 100%;
}

.pop .content .list1 {
  justify-content: flex-start;
}

.pop .content .list1 .img {
  width: 120rpx;
  margin: -40rpx 10rpx 10rpx;
}

.pop .content .list1 .img image {
  width: 100%;
}

.pop .content .list1 .text {
  font-size: 24rpx;
  color: #666;
}

.pop .content .list1 .text .choose-price {
  color: red;
  font-size: 28rpx;
}

.pop .content .list1 .text .choose-price text {
  font-size: 32rpx;
}

.pop .content .list2 .color {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.pop .content .list2 .color-item {
  display: inline-block;
  padding: 0 20rpx;
  min-width: 40rpx;
  max-width: 540rpx;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  color: #333;
  background-color: #f7f7f7;
  font-size: 28rpx;
}
.pop .content .list2 .color-item.active {
  background-color: #e4393c;
  color: #fff;
}
.pop .content .list3 .size {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.pop .content .list3 .size-item {
  display: inline-block;
  padding: 0 20rpx;
  min-width: 40rpx;
  max-width: 540rpx;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  text-align: center;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  color: #333;
  background-color: #f7f7f7;
  font-size: 28rpx;
}
.pop .content .list3 .size-item.active {
  background-color: #e4393c;
  color: #fff;
}
.pop .count .number {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.pop .count .caclute{
  width: 220rpx;
}
.pop .count .caclute text{
  float: left;
  max-width: 60rpx;
  min-width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #f7f7f7;
  text-align: center;
}

