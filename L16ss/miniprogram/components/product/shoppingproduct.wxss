/* components/product/shoppingproduct.wxss */

.shopping-product {
  background-color: #fff;
  border-bottom: solid #e5e5e5 1px;
}

.shopping-product .check-box {
  width: 106rpx;
  height: 170rpx;
  line-height: 170rpx;
  text-align: center;
}

.shopping-product .pro-img {
  padding-top: 20rpx;
}

.shopping-product .pro-img image {
  width: 150rpx;
  height: 150px;
}

.shopping-product .product-info {
  box-sizing: border-box;
  padding: 10rpx 20rpx 30rpx 20rpx;
  width: 100%;
}

.shopping-product .product-info .product-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shopping-product .product-info .detail {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  margin: 16rpx 0 20rpx;
  padding: 2rpx 50rpx 1rpx 10rpx;
  border: 1px solid #e5e5e5;
  border-radius: 4rpx;
}

.shopping-product .product-price {
  line-height: 32rpx;
  color: #e93b3d;
  font-size: 20rpx;
}

.shopping-product .product-count {
  display: block;
  width: 214rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f7f7f7;
}
.shopping-product .product-count>view{
  float: left;
}
.product-count .min,.product-count .add {
  width: 60rpx;
  height: 60rpx;
}
.product-count .count{
  font-size: 24rpx;
  color: #999;
  width: 90rpx;
}