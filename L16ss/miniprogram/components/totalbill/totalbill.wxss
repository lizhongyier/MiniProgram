/* components/totalbill/totalbill.wxss */
.total-bill{
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 4rpx;
  background-color: #fff;
  box-shadow: 0px -2rpx 16rpx 4rpx #e3e3e3;  
}
.total-bill .checkbox{
  width: 150rpx;
  height: 90rpx;
  
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
}
.intotal{
  padding:0rpx 50rpx; 
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}
.intotal .intotal-text text{
  color: red;
}
.topay{
  height: inherit;
  padding: 0 26rpx;
  background-color: red;
  line-height: 90rpx;
  color: #fff;
  font-weight: 600;
  font-size: 32rpx;
}
.topay text{
  font-size: 28rpx;
  font-weight: 400;
}
.check-box {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background-image: url(data:image/png;base64,);
  background-size: contain;
}
.check {
  width: 80rpx;
  height: 70rpx;
  padding-top: 15rpx;
  box-sizing: border-box;
  text-align: center;
}
.check-box.selected {
  background-image: url(data:image/png;base64,);
}
.bottomblock{
  width: 100%;
  height:80rpx;
}